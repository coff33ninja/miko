# Anime AI Character Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LiveKit Configuration (Required)
# Get these from your LiveKit Cloud dashboard or self-hosted server
# =============================================================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_ROOM_NAME=anime_room

# =============================================================================
# AI Provider Configuration
# Choose between Ollama (local) or Gemini (cloud)
# =============================================================================

# Set to 'true' for Ollama (local), 'false' for Gemini (cloud)
USE_OLLAMA=true

# Ollama Configuration (when USE_OLLAMA=true)
OLLAMA_MODEL=llama3
OLLAMA_HOST=http://localhost:11434

# Gemini Configuration (when USE_OLLAMA=false)
# Multiple API keys for rotation (comma-separated)
GEMINI_API_KEYS=your_gemini_key_1,your_gemini_key_2,your_gemini_key_3
GEMINI_CURRENT_KEY_INDEX=0

# =============================================================================
# Content Filtering Configuration
# =============================================================================

# Enable content filtering (auto-enabled for Gemini, disabled for Ollama)
ENABLE_CONTENT_FILTER=true

# Strict mode for content filtering
CONTENT_FILTER_STRICT_MODE=false

# =============================================================================
# Personality Configuration
# Customize your anime character's personality
# =============================================================================
PERSONALITY_PROMPT=You are a tsundere anime girl named Miko. You're tough on the outside but caring inside. Always respond with anime flair, like 'B-baka!' for embarrassment, and end with cute emotes like (*blush*). Stay in character no matter what.

# =============================================================================
# Memory Configuration (Mem0)
# Get API key from Mem0 dashboard
# =============================================================================
MEM0_API_KEY=your_mem0_api_key
MEM0_COLLECTION=anime_character
MEMORY_HISTORY_LIMIT=20

# =============================================================================
# Live2D Configuration
# Paths to your Live2D model files
# =============================================================================
# The URL should point to the .model3.json file, which defines the model structure.
LIVE2D_MODEL_URL=/static/models/miara_pro_t03.model3.json
LIVE2D_TEXTURES_URL=/static/models/textures/

# =============================================================================
# LiveKit Agents Configuration
# =============================================================================
TTS_PROVIDER=openai
STT_PROVIDER=openai

# =============================================================================
# Application Configuration
# =============================================================================

# Enable debug mode for verbose logging
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO